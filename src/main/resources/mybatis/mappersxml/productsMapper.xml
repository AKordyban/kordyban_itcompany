<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.dao.interfaces.IProductsDAO">
    <resultMap id="products" type="com.solvd.model.ProductsModel">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="productsDetails_id" column="productsDetails_id"/>
    </resultMap>
    <select id="getAllProduct" resultMap="products">
        SELECT * FROM products;
    </select>
</mapper>